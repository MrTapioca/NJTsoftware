@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@section Scripts {
    @*<partial name="_ValidationScriptsPartial" />*@
}

<div class="row mt-4">

    <div class="col-lg-6 order-lg-last mb-3 mb-lg-0">
        <img src="~/images/pic.jpg" class="img-fluid shadow" />
    </div>

    <div class="col-lg-6" id="welcome">
        <h1 class="text-primary text-shadow">Welcome</h1>
        <p class="lead mb-4 text-justify hyphenate">
            Hi there! My name is @Model.PersonalSettings.FullName and
            I'm a software developer specializing in the .NET stack.
        </p>

        <div class="row mb-3">
            <div class="col-3 col-sm-2 font-weight-bold">PHONE</div>
            <div class="col"><a href="tel:@Model.PersonalSettings.Phone">@Model.PersonalSettings.Phone</a></div>
        </div>
        <div class="row mb-3">
            <div class="col-3 col-sm-2 font-weight-bold">EMAIL</div>
            <div class="col" data-insert="email"
                 data-user="@Model.PersonalSettings.EmailUser" data-domain="@Model.PersonalSettings.EmailDomain"></div>
        </div>
        <div class="row mb-3 justify-content-start">
            <div class="col-3 col-sm-2 font-weight-bold">SOCIAL</div>
            <div class="col">
                <a href="@Model.PersonalSettings.LinkedInUrl" target="_blank">
                    <span class="fab fa-linkedin fa-2x clickable-icon"></span>
                </a>
                <a href="@Model.PersonalSettings.GitHubUrl" target="_blank" class="ml-2">
                    <span class="fab fa-github fa-2x clickable-icon"></span>
                </a>
            </div>
        </div>

        <div class="row mt-4 mb-2">
            <div class="col">
                @* d-flex flex-wrap *@
                <div class="m-n2">
                    @* flex-fill flex-sm-grow-0 *@
                    <a href="#contact" class="btn btn-lg btn-primary m-2">Contact Me</a>

                    @* flex-fill flex-sm-grow-0 *@
                    <div class="btn-group m-2">
                        <button type="button" class="btn btn-lg btn-info"
                                onclick="openLightbox('@Model.PersonalSettings.ResumeImageFile')">
                            View Resume
                        </button>
                        <button type="button" class="btn btn-lg btn-info dropdown-toggle dropdown-toggle-split" data-toggle="dropdown"></button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="@Model.PersonalSettings.ResumePdfFile">Download Resume</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

</div>

<hr class="my-4" />

<div class="row" id="solutions">
    <div class="col">
        <div class="d-flex justify-content-between">
            <h1 class="text-primary text-shadow">Solutions</h1>
            <h1><span class="far fa-lightbulb text-primary text-shadow"></span></h1>
        </div>
    </div>

</div>

<div class="row">
